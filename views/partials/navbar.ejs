    <script>
        if(document.cookie == "") {
            document.cookie="stylesheet=1"
            console.log(document.cookie);
        } else if(document.cookie=="stylesheet=1"){
            document.getElementById('stylesheet').setAttribute('href', '/css/style.css');
            console.log(document.cookie);
        } else {
            document.getElementById('stylesheet').setAttribute('href', '/css/style2.css');
            console.log(document.cookie);
        }
        
        function changecss() {
            if(document.cookie == "stylesheet=1") {
                document.getElementById('stylesheet').setAttribute('href', '/css/style2.css');
                document.cookie="stylesheet=2"
            }
            else {
                document.getElementById('stylesheet').setAttribute('href', '/css/style.css');
                document.cookie="stylesheet=1"
            }
        }
    </script>
</header>